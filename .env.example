# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=replace-me

# Mongo configuration
# Default credentials support local development.
# Rotate them via scripts/initial_setup.sh or by editing .env before production use.
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-me
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change-me
APP_MONGO_URI=mongodb://admin:change-me@mongodb:27017/admin
MONGO_URI=mongodb://admin:change-me@mongodb:27017/admin
MONGO_DATA_HOST_PATH=../mongo_data
MONGO_DATA_PATH=/data/db

# Data locations
ARCHIVES_HOST_PATH=../archives
ARCHIVES_PATH=/data/archives
SESSION_HOST_PATH=../flask_session
SESSION_PATH=/app/flask_session

# Optional runtime behaviour
RUN_BOOTSTRAP=0
MONGO_MAX_RETRIES=10
MONGO_RETRY_DELAY=5

# Historian agent configuration
HISTORIAN_AGENT_ENABLED=1
HISTORIAN_AGENT_MODEL_PROVIDER=ollama
HISTORIAN_AGENT_MODEL=llama3
HISTORIAN_AGENT_TEMPERATURE=0.2
HISTORIAN_AGENT_CONTEXT_K=4
HISTORIAN_AGENT_CONTEXT_FIELDS=title,content
HISTORIAN_AGENT_SUMMARY_FIELD=content
HISTORIAN_AGENT_FALLBACK=1
OLLAMA_BASE_URL=http://host.docker.internal:11434
# OPENAI_API_KEY=sk-...
