ARCHIVES_PATH=/data/archives/
ARCHIVES_HOST_PATH=../archives/borr_data/
MONGO_DATA_PATH=/data/db
MONGO_DATA_HOST_PATH=../mongo_data
SESSION_PATH=/app/flask_session
